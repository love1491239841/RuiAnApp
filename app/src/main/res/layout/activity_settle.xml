<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:orientation="vertical"
        android:background="@drawable/routin_shape">
        <View
            android:layout_width="match_parent"
            android:layout_height="25dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/settle_fh"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:src="@mipmap/fanhui"/>
            <TextView
                android:id="@+id/settle_titlename"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="20dp"
                android:text="长江企业"/>
            <ImageView
                android:id="@+id/settle_tj"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:src="@mipmap/tj"/>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/common_shape"
                android:text="整改通知单"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="#000000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:background="@drawable/common_shape"
                    android:text="工程名称:"
                    android:textSize="15dp"
                    android:textColor="#000000"/>
                <EditText
                    android:id="@+id/se_name"
                    android:background="@drawable/common_shape"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:textSize="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:background="@drawable/common_shape"
                    android:text="工程地址:"
                    android:textSize="15dp"
                    android:textColor="#000000"/>
                <EditText
                    android:id="@+id/se_add"
                    android:background="@drawable/common_shape"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:textSize="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:background="@drawable/common_shape"
                    android:text="发包单位:"
                    android:textSize="15dp"
                    android:textColor="#000000"/>
                <EditText
                    android:id="@+id/se_fbdw"
                    android:background="@drawable/common_shape"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:textSize="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:background="@drawable/common_shape"
                    android:text="施工单位:"
                    android:textSize="15dp"
                    android:textColor="#000000"/>
                <EditText
                    android:id="@+id/se_sgdw"
                    android:background="@drawable/common_shape"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:textSize="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:background="@drawable/common_shape"
                    android:text="督管单位:"
                    android:textSize="15dp"
                    android:textColor="#000000"/>

                <EditText
                    android:id="@+id/se_jgdw"
                    android:background="@drawable/common_shape"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:textSize="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:background="@drawable/common_shape"
                    android:text="致:"
                    android:textSize="15dp"
                    android:textColor="#000000"/>

                <EditText
                    android:id="@+id/se_zhi"
                    android:background="@drawable/common_shape"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:textSize="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:background="@drawable/common_shape"
                    android:text="被查时间"
                    android:textSize="15dp"
                    android:textColor="#000000"/>
                <Button
                    android:id="@+id/se_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:background="@drawable/common_shape"
                    android:gravity="center_vertical"
                    android:textSize="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/common_shape"
                    android:text="查出问题"
                    android:textSize="15dp"
                    android:textColor="#000000"/>
            </LinearLayout>
            <EditText
                android:id="@+id/se_problem"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:enabled="true"
                android:gravity="top"
                android:minLines="8"
                android:maxLines="10"
                android:scrollbars="vertical"
                android:background="@drawable/common_shape" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:background="@drawable/common_shape"
                    android:text="停工时间"
                    android:textSize="15dp"
                    android:textColor="#000000"/>
                <Button
                    android:id="@+id/se_cljzsj"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:background="@drawable/common_shape"
                    android:gravity="center_vertical"
                    android:textSize="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/common_shape"
                    android:text="停止相关作业并整改到位，经安全督管工程师复查合格后方可继续该项作业，作业过程中应服从安全督管工程师及相关管理部门人员监督管理，文明施工、按章作业。"
                    android:textSize="15dp"
                    android:textColor="#000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/common_shape"
                    android:text="其他:"
                    android:textSize="15dp"
                    android:textColor="#000000"/>
            </LinearLayout>
            <EditText
                android:id="@+id/se_other"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:enabled="true"
                android:gravity="top"
                android:minLines="8"
                android:maxLines="10"
                android:scrollbars="vertical"
                android:background="@drawable/common_shape" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="@drawable/common_shape"
                    android:gravity="center"
                    android:text="签发人:"
                    android:textColor="#000000"
                    android:textSize="15dp" />
                <ImageView
                    android:id="@+id/se_qfr"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:background="@drawable/common_shape"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:background="@drawable/common_shape"
                    android:text="时间:"
                    android:textSize="15dp"
                    android:textColor="#000000"/>
                <Button
                    android:id="@+id/se_qfrq"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:background="@drawable/common_shape"
                    android:gravity="center_vertical"
                    android:textSize="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/common_shape"
                    android:text="签收意见"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:id="@+id/textView3" />
            </LinearLayout>
            <EditText
                android:id="@+id/se_qsyj"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:enabled="true"
                android:gravity="top"
                android:minLines="8"
                android:maxLines="10"
                android:scrollbars="vertical"
                android:background="@drawable/common_shape" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="@drawable/common_shape"
                    android:gravity="center"
                    android:text="收件人:"
                    android:textColor="#000000"
                    android:textSize="15dp" />
                <ImageView
                    android:id="@+id/se_qsr"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:background="@drawable/common_shape"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:background="@drawable/common_shape"
                    android:text="签收时间:"
                    android:textSize="15dp"
                    android:textColor="#000000"/>
                <Button
                    android:id="@+id/se_qsrq"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:background="@drawable/common_shape"
                    android:gravity="center_vertical"
                    android:textSize="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/common_shape"
                    android:text="复查意见"
                    android:textSize="15dp"
                    android:textColor="#000000"/>
            </LinearLayout>
            <EditText
                android:id="@+id/se_fcyj"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:enabled="true"
                android:gravity="top"
                android:minLines="8"
                android:maxLines="10"
                android:scrollbars="vertical"
                android:background="@drawable/common_shape" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="@drawable/common_shape"
                    android:gravity="center"
                    android:text="复查人:"
                    android:textColor="#000000"
                    android:textSize="15dp" />
                <ImageView
                    android:id="@+id/se_fcr"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:background="@drawable/common_shape"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:background="@drawable/common_shape"
                    android:text="复查时间:"
                    android:textSize="15dp"
                    android:textColor="#000000"/>
                <Button
                    android:id="@+id/se_fcrq"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:background="@drawable/common_shape"
                    android:gravity="center_vertical"
                    android:textSize="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:background="@drawable/common_shape"
                    android:text="抄送:"
                    android:textSize="15dp"
                    android:textColor="#000000"/>

                <EditText
                    android:id="@+id/se_cs"
                    android:background="@drawable/common_shape"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:textSize="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/common_shape"
                    android:text="注：以上罚款于工程竣工验收通过后从安全保证金内扣除，所有罚款均以施工方名义捐献给慈善机构。
本罚款单一式三份：签发单位一份，受罚公司一份，发包单位一份。"
                    android:textSize="15dp"
                    android:textColor="#E8222D"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="300dp"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>