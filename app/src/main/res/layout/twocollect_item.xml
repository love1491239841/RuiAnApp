<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/common_shape"
            android:text="危险有害因素排除辨识清单"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="#000000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:background="@drawable/common_shape"
                android:text="序列号:"
                android:textSize="15dp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/tw_co_id"
                android:background="@drawable/common_shape"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:background="@drawable/common_shape"
                android:text="风险点名称:"
                android:textSize="15dp"
                android:textColor="#000000"/>
            <EditText
                android:id="@+id/tw_co_name"
                android:background="@drawable/common_shape"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:textSize="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:background="@drawable/common_shape"
                android:text="所在位置:"
                android:textSize="15dp"
                android:textColor="#000000"/>
            <EditText
                android:id="@+id/tw_co_add"
                android:background="@drawable/common_shape"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:textSize="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:background="@drawable/common_shape"
                android:text="存在的主要危险因素:"
                android:textSize="15dp"
                android:textColor="#000000"/>
            <EditText
                android:id="@+id/tw_co_reason"
                android:background="@drawable/common_shape"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:textSize="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:background="@drawable/common_shape"
                android:text="易发生的事故类别:"
                android:textSize="15dp"
                android:textColor="#000000"/>
            <EditText
                android:id="@+id/tw_co_acc"
                android:background="@drawable/common_shape"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:textSize="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:background="@drawable/common_shape"
                android:text="备注:"
                android:textSize="15dp"
                android:textColor="#000000"/>

            <EditText
                android:background="@drawable/common_shape"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:textSize="15dp"
                android:id="@+id/tw_co_bz" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:background="@drawable/common_shape"
                android:text="操作:"
                android:textSize="15dp"
                android:textColor="#000000"/>
            <EditText
                android:id="@+id/tw_co_cz"
                android:background="@drawable/common_shape"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:textSize="15dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>